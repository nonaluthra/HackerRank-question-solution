#include<iostream>
using namespace std;
class Triangle{ 
    public:
    void triangle(void){
    cout<<"I am a triangle"<<endl;

    }
};
class Isosceles : public Triangle{
    public:
        void isosceles(void){
            cout<<"I am an isosceles triangle"<<endl;
            cout<<"In an isosceles triangle two sides are equal"<<endl;
        }
};
int main(){
    Isosceles isc;
    isc.isosceles();
    isc.triangle();
    return 0;
}
